<%- include('../partials/header') %>

<div class="login-page">
  <div class="login-wrapper">
    <h2>Sign in to LuxeStay Hotels</h2>

    <!-- âœ… Flash messages -->
    <% if (error_msg && error_msg.length) { %>
      <div class="flash-error"><%= error_msg[0] %></div>
      <% if (error_msg[0].toLowerCase().includes('verify')) { %>
        <a href="/auth/resend-verification" class="text-primary d-block mt-2">Resend verification email</a>
      <% } %>
    <% } %>

    <% if (success_msg && success_msg.length) { %>
      <div class="flash-success"><%= success_msg[0] %></div>
    <% } %>

    <form action="/auth/login" method="POST">
      <div class="form-group">
        <label>Email or Username</label>
        <input name="identifier" placeholder="Enter your email Id" required>
      </div>

      <div class="form-group">
        <label>Password</label>
        <input type="password" name="password" placeholder="Enter your password" required>
      </div>

      <div class="form-bottom">
        <a href="/auth/forgot-password" class="forgot-link">Forgot your password?</a>
        <button type="submit" class="btn-login">Sign in</button>
      </div>

      <p class="register-link">
        Not a member? <a href="/auth/register">Create an account</a>
      </p>
    </form>
  </div>
</div>

<%- include('../partials/footer') %>
