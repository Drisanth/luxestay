<%- include('../partials/header') %>

<div class="admin-layout">
  <%- include('../partials/adminSidebar') %>


  <div class="admin-main">
    <h2>🎟️ Create New Coupon</h2>

    <div class="admin-form-wrapper mt-3">
      <form action="/admin/coupons" method="POST">
        <div class="form-group">
          <label>Coupon Code</label>
          <input name="code" required class="form-control" placeholder="e.g. SUMMER25">
        </div>

        <div class="form-group">
          <label>Discount (%)</label>
          <input name="discount" type="number" min="1" max="100" required class="form-control" placeholder="e.g. 25">
        </div>

        <div class="form-group">
          <label>Expiration Date</label>
          <input name="expiresAt" type="date" required class="form-control">
        </div>

        <button class="btn-primary mt-3">➕ Create Coupon</button>
      </form>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
