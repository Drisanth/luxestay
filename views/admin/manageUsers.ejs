<%- include('../partials/header') %>

<div class="admin-layout">
  <%- include('../partials/adminSidebar') %>


  <div class="admin-main">
    <h2>ðŸ‘¤ Manage Users</h2>

    <!-- ðŸ‘¥ Users Table -->
    <div class="user-table mt-3">
      <table>
        <thead>
          <tr>
            <th>Username</th>
            <th>Email</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% users.forEach(u => { %>
            <tr>
              <td><%= u.username %></td>
              <td><%= u.email %></td>
              <td>
                <% if (!u.isAdmin) { %>
                  <form method="POST" action="/admin/users/<%= u._id %>/promote" onsubmit="return confirm('Promote this user to admin?')">
                    <button class="btn-promote btn-sm">Promote</button>
                  </form>
                <% } else { %>
                  <span class="badge-admin">Admin</span>
                <% } %>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    </div>
  </div>
</div>

<%- include('../partials/footer') %>
