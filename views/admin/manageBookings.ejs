<%- include('../partials/header') %>

<div style="display: flex; min-height: 90vh;">
  <%- include('../partials/adminSidebar') %>
  
  <div style="flex-grow: 1; padding: 2rem;">
  <h2>Manage Bookings</h2>
  <table class="table">
    <thead>
      <tr><th>User</th><th>Room</th><th>Dates</th><th>Status</th><th>Actions</th></tr>
    </thead>
    <tbody>
      <% bookings.forEach(b => { %>
        <tr>
          <td><%= b.user?.username %></td>
          <td><%= b.room?.name %></td>
          <td><%= b.checkIn.toDateString() %> â†’ <%= b.checkOut.toDateString() %></td>
          <td><%= b.status %></td>
          <td><button class="btn btn-sm">Change</button></td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</div>
</div>
<%- include('../partials/footer') %>
