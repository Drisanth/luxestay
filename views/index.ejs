<nav style="
  background-color: #5a3c20;
  padding: 1.5rem 2rem;
  display: flex;
  justify-content: space-between;
  align-items: center;
  border-bottom: 2px solid #d9c8b4; /* subtle gold/cream line */
  font-family: 'Georgia', serif; /* elegant serif font */
">
  <h2 style="color: #fff; margin: 0; font-size: 1.8rem; letter-spacing: 1px;">LuxeStay Hotels</h2>
  
  <ul style="list-style: none; display: flex; gap: 1.5rem; margin: 0; padding: 0;">
    <li>
      <a href="/rooms" style="color: #fff; text-decoration: none; font-size: 1rem;">Rooms</a>
    </li>
    <% if (!user) { %>
      <li>
        <a href="/auth/login" style="
          color: #fff;
          background: #a67252;
          padding: 0.5rem 1rem;
          border-radius: 8px;
          box-shadow: 0 2px 6px rgba(0,0,0,0.2);
          text-decoration: none;
          font-weight: 500;
          transition: background 0.3s;
        ">Login / Register</a>
      </li>
    <% } else { %>
      <li>
        <a href="/auth/logout" style="color: #fff; text-decoration: none;">Logout</a>
      </li>
    <% } %>
  </ul>
</nav>


<div class="landing">
  <div class="landing-left">
    <h1>Welcome to <span class="brand">LuxeStay Hotels!</span></h1>
    <p>
      Your ultimate destination for luxurious and comfortable stays.
      Explore our curated selection of rooms and book your perfect
      getaway today.
    </p>
    <div class="landing-buttons">
      <a href="/rooms" class="btn-primary">Explore Rooms</a>
      <a href="/auth/register" class="btn-secondary">Join Now</a>
    </div>
  </div>
  <div class="landing-right">
    <img src="/images/hotel-lobby.jpg" alt="Hotel Lobby" />
  </div>
</div>

<%- include('./partials/footer') %>
